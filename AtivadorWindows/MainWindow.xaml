<Window x:Class="AtivadorWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtivadorWindows"
        mc:Ignorable="d"
        Title="Ativador Windows e Office" Height="250" Width="500" WindowStyle="SingleBorderWindow" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40px"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition  Width="auto"/>
            <ColumnDefinition />
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="1" Grid.Row="1" TextBlock.FontSize="15px" Click="AtivarWindows" Padding="10px">Ativar Windows</Button>
        <Button Grid.Column="3" Grid.Row="1" TextBlock.FontSize="15px" Padding="10px" Click="AtivarOffice">Ativar Office</Button>
        <Button Grid.Column="5" Grid.Row="1" TextBlock.FontSize="15px" Padding="10px" Click="MudarEdicao">Mudar Edição do Windows</Button>
    </Grid>


</Window>
